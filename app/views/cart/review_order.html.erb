<% content_for :title, "Royal Cirque Publishing Review Order" %>
<div id="checkout-content-banner">
	<div id="checkout-content">
		<div id="product-detail">
			<%= form_for :customer, :url => { :controller => "cart", :action => "place_order" } do |f| %>
			<%= f.hidden_field :order_id, :value => @order.id %>
			<div class="row">
				<div class="col-md-12">
					<div class="large-font" style="margin: 10px;">Review Order</div>
				</div>
			</div>
			<div class="row" style="padding: 10px;">
				<div class="col-md-4">
					<p>
						<%= @cust.first_name %> <%= @cust.last_name %><br/>
						<%= @cust.email %><br/><br/>
						Card Number: ************<%= @order.card_number[@order.card_number.size - 4, @order.card_number.size] if !@order.card_number.nil?%>
					</p>
				</div>
				<div class="col-md-4">
					<div class="row">
						<div class="col-md-12">
							<h3>Ship To:</h3>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<p>
								<%= @order.ship_name %><br/>
								<%= @order.ship_street_1 %><br/>
								<%= @order.ship_street_2 %><br/>
								<%= @order.ship_city %>, <%= @order.ship_state %> <%= @order.ship_zip %>
							</p>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="row">
						<div class="col-md-12">
							<h3>Bill To:</h3>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<p>
								<%= @order.bill_name %><br/>
								<%= @order.bill_street_1 %><br/>
								<%= @order.bill_street_2 %><br/>
								<%= @order.bill_city %>, <%= @order.bill_state %> <%= @order.bill_zip %>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div class="row" style="border-top: 1px solid #6E6E6C; padding: 10px;">
				<div class="col-md-12">
					<h3>Order Details</h3>
				</div>
			</div>
			<div class="row" style="padding: 10px;">
				<div class="col-md-12">
					<table id="customer-table" class="table">
						<tr>
							<th class="medium-bold-font">
								Product
							</th>
							<th class="medium-bold-font">
								Quantity
							</th>
							<th class="medium-bold-font text-right">
								Price
							</th>
							<th class="medium-bold-font text-right">
								Subtotal
							</th>
							<th class="medium-bold-font text-right">
								Discount
							</th>
							<th class="medium-bold-font text-right">
								Tax
							</th>
							<th class="medium-bold-font text-right">
								Total
							</th>
						</tr>
						<%- @order.order_details.each do |od| -%>
							<tr>
								<td>
									<%= od.product.title %>
								</td>
								<td>
									<%= od.quantity %>
								</td>
								<td align="right">
									<%= number_to_currency od.product.price %>
								</td>
								<td align="right">
									<%= number_to_currency od.subtotal %>
								</td>
								<td align="right">
									<%= number_to_currency od.discount %>
								</td>
								<td align="right">
									<%= number_to_currency od.tax %>
								</td>
								<td align="right">
									<%= number_to_currency od.total %>
								</td>
							</tr>
						<%- end -%>
						<tr>
							<td style="border-top: 1px solid #6E6E6C">
								Shipping
							</td>
							<td style="border-top: 1px solid #6E6E6C">
							</td>
							<td style="border-top: 1px solid #6E6E6C">
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
								<%= number_to_currency 0 %>
							</td>
						</tr>
						<tr>
							<td style="border-top: 1px solid #6E6E6C">
								Order Total
							</td>
							<td style="border-top: 1px solid #6E6E6C">
							</td>
							<td style="border-top: 1px solid #6E6E6C">
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
								<%= number_to_currency @order.subtotal %>
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
								<%= number_to_currency @order.discount %>
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
								<%= number_to_currency @order.tax %>
							</td>
							<td align="right" style="border-top: 1px solid #6E6E6C">
								<%= number_to_currency @order.total %>
							</td>
						</tr>
					</table>
				</div>
			</div>
			<div class="row" style="padding: 10px;">
				<div class="col-md-12 text-center">
					<p>By placing this order your credit card will be charged and your order will be processed.</p><br/><br/>
					<div><%= f.submit "Place Order", :class => "btn btn-default input-sm" %></div>
				</div>
			</div>

			<% end %>
		</div>
	</div>
</div>
