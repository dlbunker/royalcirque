<% content_for :title, "Welcome to Royal Cirque Publishing" %>
<% content_for :description, "Royal Cirque Publishing produces high quality books and music ranging in a wide variety of topics.  We are located in Salt Lake City, UT." %>
<% content_for :keywords, "publishing, publishers, books, media, authors, distributors, print" %>
<div id="home-content-banner">
	<div id="featured-content">
		<div id="featured-product">
			<table border="0" cellspacing="0" cellpadding="0">
				<tr>
					<td>
						<%= link_to image_tag("/home/get_featured_image/" + @product.id.to_s, :border =>0) , {:controller => "products", :action => "detail", :id => @product.id} %>
					</td>
					<td>
						<table border="0" cellspacing="0" cellpadding="0" class="content-table">
							<tr>
								<td class="large-font">
									<div class="gotham-light-forced-line"><%= @product.title %></div>
								</td>
							</tr>
							<tr>
								<td>
									<div class="gotham-light-600"><%= @product.description %></div>
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>