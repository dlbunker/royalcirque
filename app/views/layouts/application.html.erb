              <li><%= link_to image_tag("layout/home.jpg", :border =>0, :class => "hoverswap") , {:controller => "home" } %></li>
              <li><%= link_to image_tag("layout/products.jpg", :border =>0, :class => "hoverswap") , {:controller => "products" } %></li>
              <li><%= link_to image_tag("layout/view_cart.jpg", :border =>0, :class => "hoverswap") , {:controller => "cart" } %></li>
              <li><%= link_to image_tag("layout/contact_us.jpg", :border =>0, :class => "hoverswap") , {:controller => "contact_us" } %></li>
            </ul>
